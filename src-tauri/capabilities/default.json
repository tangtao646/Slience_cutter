{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "shell:default",
    "fs:default",
    "dialog:default",
    "log:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-app-write",
    "fs:allow-app-read",
    "fs:scope-home-recursive",
    "fs:scope-app-recursive",
    {
      "identifier": "shell:allow-execute",
      "scope": {
        "allow": [
          {
            "name": "binaries/ffmpeg",
            "sidecar": true,
            "args": true
          },
          {
            "name": "binaries/ffprobe",
            "sidecar": true,
            "args": true
          }
        ]
      }
    }
  ]
}