{
  "productName": "silence-cutter",
  "version": "1.0.1",
  "identifier": "com.silencecutter.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Silence Cutter",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' https://cdnjs.cloudflare.com video-stream:; media-src 'self' * blob: asset: tauri: video-stream: https://asset.localhost http://asset.localhost; img-src 'self' asset: https://asset.localhost http://asset.localhost data:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; connect-src 'self' video-stream:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {},
    "dialog": null
  }
}